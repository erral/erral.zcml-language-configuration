{
  "name": "erral.zcml-language-configuration",
  "displayName": "ZCML language configuration",
  "description": "ZCML is an XML dialect used to configure Zope Applications",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "erral",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "contributes": {
    "languages": [
      {
        "id": "zcml",
        "extensions": [
          ".zcml"
        ],
        "aliases": [
          "ZCML"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zcml",
        "scopeName": "source.zcml",
        "path": "./zcml.grammar.json"
      }
    ],
    "configuration": {
      "title": "ZCML Language",
      "properties": {
        "zcmlLanguage.zprettypath": {
          "type": "string",
          "description": "Enter the absolute path of zpretty",
          "default": "/usr/local/bin/zpretty"
        },
        "zcmlLanguage.zprettyoptions": {
          "type": "string",
          "description": "Enter the command line options to append to the zpretty call. By default we pass the -z option signaling that this file is a ZCML file",
          "default": "-z"
        }
      }
    }
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.2",
    "typescript": "^4.4.3",
    "vsce": "^1.100.0",
    "vscode-test": "^1.6.1"
  }
}
